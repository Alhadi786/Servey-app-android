    android:background="#ededed"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/topLable"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#E1E2D4"
        android:gravity="center"
        android:text="24 of 28"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:text="If no, what are the main reasons of women not casting votes. \n اگر نہیں توخواتین کے ووٹ نہ ڈالنے کی کیا وجوہات ہیں؟"
        android:id="@+id/textview"
        android:textSize="25sp"
        android:gravity="center"
        android:maxLines="10"
        android:textColor="#808080"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLable"/>
