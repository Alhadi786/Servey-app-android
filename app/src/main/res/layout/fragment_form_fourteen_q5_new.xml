<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ededed"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/topLable"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#E1E2D4"
        android:gravity="center"
        android:text="5 of 19"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:text="Date of Birth \n پیدائش کی تاریخ"
        android:id="@+id/textview"
        android:textSize="25sp"
        android:gravity="center"
        android:maxLines="10"
        android:textColor="#808080"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLable"/>
    <EditText
        android:id="@+id/ans5EditText"
        android:background="@drawable/rounded_shape_edittext"
        android:layout_width="200dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtError"
        android:gravity="center|center_horizontal"
        android:layout_height="60dp"
        android:inputType="text"
        android:editable="false"
        android:focusable="false"
        android:clickable="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txtError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="36dp"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />

</RelativeLayout>

